<h2>Staking Dashboard</h2>

<p>Welcome to the staking dApp!</p>

<p>Current user: <%= userAddress || "not connected" %></p>
<p>Staked balance: <%= balance || 0 %> tokens</p>

<button id="connectBtn">Connect Wallet</button>
<script type="module">
  import { connectWallet } from '/dist/Wallet.js'; // Adjust path as needed

  document.getElementById('connectBtn').onclick = async () => {
    const account = await connectWallet();
    alert('Connected: ' + account);
  };
</script>

